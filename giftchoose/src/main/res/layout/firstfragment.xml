<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/firstfragment_head"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/firstfragment_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="礼物说"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/color_hong"
        android:layout_below="@id/firstfragment_head"/>
    <EditText
        android:id="@+id/firstfragment_surch_edt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:paddingRight="100dp"
        android:drawableLeft="@drawable/nav_bar_icon_search_dark"
        android:drawablePadding="5dp"
        android:hint="搜索"
        android:layout_toRightOf="@id/firstfragment_title_txt"/>
    <ImageView
        android:id="@+id/firstfragment_clock_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_clock"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/firstfragment_indicator"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/firstfragment_surch_edt"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/firstfragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/firstfragment_indicator"></android.support.v4.view.ViewPager>
</RelativeLayout>